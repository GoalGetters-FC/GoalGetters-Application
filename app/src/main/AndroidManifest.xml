<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".YourApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Splash Activity (Launcher) -->
        <activity
            android:name=".ui.startup.views.SplashActivity"
            android:exported="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Sign In Activity -->
        <activity
                android:name=".ui.startup.views.SignInActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Sign Up Activity -->
        <activity
                android:name=".ui.startup.views.SignUpActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Age Verification Activity -->
        <activity
                android:name=".ui.startup.views.AgeVerificationActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Forgot Password Activity -->
        <activity
                android:name=".ui.startup.views.ForgotPasswordActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Age Verification Success Activity -->
        <activity
                android:name=".ui.startup.views.AgeVerificationSuccessActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Onboarding Activity -->
        <activity
                android:name=".ui.startup.views.OnboardingActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Age Check Activity -->
        <activity
                android:name=".ui.startup.views.AgeCheckActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Access Denied Activity -->
        <activity
                android:name=".ui.startup.views.AccessDeniedActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Verification Activity -->
        <activity
                android:name=".ui.startup.views.VerificationActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Welcome Activity -->
        <activity
                android:name=".ui.startup.views.WelcomeActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Welcome Back Activity -->
        <activity
                android:name=".ui.startup.views.WelcomeBackActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Unified Entry Activity (after onboarding) -->
        <activity
                android:name=".ui.startup.views.UnifiedEntryActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Home Activity -->
        <activity
                android:name=".ui.central.views.HomeActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Notifications Activity -->
        <activity
                android:name=".ui.central.views.NotificationsActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Verification Success Overlay Activity -->
        <activity
                android:name=".ui.startup.views.VerificationSuccessOverlay"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Join Team Activity -->
        <activity
                android:name=".ui.startup.views.JoinTeamActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Create Team Activity -->
        <activity
                android:name=".ui.startup.views.CreateTeamActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

    </application>

</manifest>