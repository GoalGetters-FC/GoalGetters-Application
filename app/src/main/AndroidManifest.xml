<?xml version="1.0" encoding="utf-8"?>
<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
            android:name=".LocalApplication"
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <!-- Disable AndroidX Startup from auto-initializing WorkManager so we can provide HiltWorkerFactory -->
        <provider
                android:name="androidx.startup.InitializationProvider"
                android:authorities="${applicationId}.androidx-startup"
                android:exported="false"
                tools:node="merge">
            <meta-data
                    android:name="androidx.work.WorkManagerInitializer"
                    android:value="androidx.startup"
                    tools:node="remove" />
        </provider>
        <service
                android:name=".core.services.NotificationService"
                android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <activity
                android:name=".ui.startup.views.OnboardingActivity"
                android:exported="false" />
        <activity
                android:name=".ui.management.views.TeamViewerActivity"
                android:exported="false" /> <!-- Activities -->
        <activity
                android:name=".ui.management.views.TeamDetailActivity"
                android:exported="false"
                android:theme="@style/AppTheme"
                android:windowSoftInputMode="adjustResize" />
        <activity
                android:name=".ui.startup.views.StartActivity"
                android:exported="true"
                android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".ui.startup.views.SignInActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />
        <activity
                android:name=".ui.startup.views.SignUpActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />
        <activity
                android:name=".ui.startup.views.ForgotPasswordActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />
        <activity
                android:name=".ui.central.views.HomeActivity"
                android:exported="false"
                android:theme="@style/AppTheme"
                android:windowSoftInputMode="adjustResize" />
        <activity
                android:name=".ui.central.views.NotificationsActivity"
                android:exported="false"
                android:theme="@style/AppTheme"
                android:windowSoftInputMode="adjustResize" />
        <activity
                android:name=".ui.central.views.AddEventActivity"
                android:exported="false"
                android:theme="@style/AppTheme"
                android:windowSoftInputMode="adjustResize" />
        <activity
                android:name=".ui.central.views.MatchControlActivity"
                android:exported="false"
                android:theme="@style/AppTheme"
                android:windowSoftInputMode="adjustResize" />
        <activity
                android:name=".ui.central.views.MatchDetailsActivity"
                android:exported="false"
                android:theme="@style/AppTheme"
                android:windowSoftInputMode="adjustResize" />
        <activity
                android:name=".ui.central.views.MatchRosterActivity"
                android:exported="false"
                android:theme="@style/AppTheme"
                android:windowSoftInputMode="adjustResize" />
                <activity
            android:name=".ui.central.views.FormationActivity"
            android:exported="false"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.central.views.PostMatchActionsActivity"
            android:exported="false"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.central.views.MatchActivity"
            android:exported="false"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>