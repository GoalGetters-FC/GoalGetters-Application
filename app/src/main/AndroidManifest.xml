<?xml version="1.0" encoding="utf-8"?>
<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        
        <!-- Splash Activity (Launcher) -->
        <activity
                android:name=".ui.views.SplashActivity"
                android:exported="true"
                android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
                android:name=".ui.views.LoginActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Register Activity -->
        <activity
                android:name=".ui.views.RegisterActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Age Verification Activity -->
        <activity
                android:name=".ui.views.AgeVerificationActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Forgot Password Activity -->
        <activity
                android:name=".ui.views.ForgotPasswordActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Main Activity (with bottom navigation) -->
        <activity
                android:name=".ui.views.MainActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

    </application>

</manifest>