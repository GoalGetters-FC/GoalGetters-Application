<?xml version="1.0" encoding="utf-8"?>
<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        
        <!-- Splash Activity (Launcher) -->
        <activity
                android:name=".ui.onboarding.SplashActivity"
                android:exported="true"
                android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Sign In Activity -->
        <activity
                android:name=".ui.activities.SignInActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Sign Up Activity -->
        <activity
                android:name=".ui.activities.SignUpActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Age Verification Activity -->
        <activity
                android:name=".ui.activities.AgeVerificationActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Forgot Password Activity -->
        <activity
                android:name=".ui.activities.ForgotPasswordActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Main Activity (with bottom navigation) -->
        <activity
                android:name=".ui.shared.MainActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Age Verification Success Activity -->
        <activity
                android:name=".ui.activities.AgeVerificationSuccessActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Onboarding Activity -->
        <activity
                android:name=".ui.activities.OnboardingActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Age Check Activity -->
        <activity
                android:name=".ui.activities.AgeCheckActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Access Denied Activity -->
        <activity
                android:name=".ui.activities.AccessDeniedActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Verification Activity -->
        <activity
                android:name=".ui.activities.VerificationActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Welcome Activity -->
        <activity
                android:name=".ui.activities.WelcomeActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Welcome Back Activity -->
        <activity
                android:name=".ui.activities.WelcomeBackActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Unified Entry Activity (after onboarding) -->
        <activity
                android:name=".ui.activities.UnifiedEntryActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Home Activity -->
        <activity
                android:name=".ui.activities.HomeActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Verification Success Overlay Activity -->
        <activity
                android:name=".ui.activities.VerificationSuccessOverlay"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Join Team Activity -->
        <activity
                android:name=".ui.activities.JoinTeamActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

        <!-- Create Team Activity -->
        <activity
                android:name=".ui.activities.CreateTeamActivity"
                android:exported="false"
                android:theme="@style/AppTheme" />

    </application>

</manifest>