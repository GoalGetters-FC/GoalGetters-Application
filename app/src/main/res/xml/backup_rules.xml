<?xml version="1.0" encoding="utf-8"?>
<!--
   GoalGetters Backup Security Rules
   Protects sensitive user data while allowing app functionality restoration
   See https://developer.android.com/guide/topics/data/autobackup for details
-->
<full-backup-content>
    <!-- EXCLUDE: Sensitive Authentication Data -->
    <exclude domain="sharedpref" path="auth_preferences.xml"/>
    <exclude domain="sharedpref" path="firebase_auth_tokens.xml"/>
    <exclude domain="sharedpref" path="google_auth_credentials.xml"/>
    
    <!-- EXCLUDE: Personal Health & Contact Information -->
    <exclude domain="sharedpref" path="user_health_data.xml"/>
    <exclude domain="sharedpref" path="contact_information.xml"/>
    <exclude domain="sharedpref" path="personal_details.xml"/>
    
    <!-- EXCLUDE: Database Files (contain sensitive data) -->
    <exclude domain="database" path="ggetters_v1.db"/>
    <exclude domain="database" path="ggetters-config.db"/>
    <exclude domain="database" path="ggetters.db"/>
    <exclude domain="database" path="ggetters.sqlite"/>
    <exclude domain="database" path="app_database"/>
    <exclude domain="database" path="config_database"/>
    
    <!-- EXCLUDE: Firebase & Google Services Data -->
    <exclude domain="sharedpref" path="firebase_analytics.xml"/>
    <exclude domain="sharedpref" path="crashlytics_data.xml"/>
    <exclude domain="sharedpref" path="google_services.xml"/>
    
    <!-- EXCLUDE: Team Contact & Sensitive Team Data -->
    <exclude domain="sharedpref" path="team_contact_details.xml"/>
    <exclude domain="sharedpref" path="team_sensitive_info.xml"/>
    
    <!-- EXCLUDE: Database Maintenance & Internal Flags -->
    <exclude domain="sharedpref" path="db_maintenance"/>
    <exclude domain="sharedpref" path="internal_flags.xml"/>
    
    <!-- EXCLUDE: DataStore Files (ConfigurationsService) -->
    <exclude domain="file" path="ConfigurationsOptions.preferences_pb"/>
    <exclude domain="file" path="ConfigurationsOptions.preferences_pb.tmp"/>
    <exclude domain="file" path="ConfigurationsOptions.preferences_pb.lock"/>
    <exclude domain="file" path="datastore/ConfigurationsOptions.preferences_pb"/>
    <exclude domain="file" path="datastore/ConfigurationsOptions.preferences_pb.tmp"/>
    <exclude domain="file" path="datastore/ConfigurationsOptions.preferences_pb.lock"/>
    
    <!-- EXCLUDE: All DataStore directories and files -->
    <exclude domain="file" path="datastore/"/>
    <exclude domain="file" path="*.preferences_pb"/>
    <exclude domain="file" path="*.preferences_pb.tmp"/>
    <exclude domain="file" path="*.preferences_pb.lock"/>
    
    <!-- INCLUDE: Safe App Configuration -->
    <include domain="sharedpref" path="app_preferences.xml"/>
    <include domain="sharedpref" path="ui_preferences.xml"/>
    <include domain="sharedpref" path="theme_settings.xml"/>
    <include domain="sharedpref" path="notification_preferences.xml"/>
    
    <!-- INCLUDE: Non-sensitive App State -->
    <include domain="sharedpref" path="app_state.xml"/>
    <include domain="sharedpref" path="user_preferences.xml"/>
    
    <!-- INCLUDE: Cache Files (non-sensitive) -->
    <include domain="file" path="cache/"/>
    <include domain="file" path="temp/"/>
    
    <!-- EXCLUDE: All other shared preferences by default -->
    <exclude domain="sharedpref" path="."/>
</full-backup-content>