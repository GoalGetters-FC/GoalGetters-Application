<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/surface">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quick Match Actions"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/on_surface"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Goal Actions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Goals"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/on_surface"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoalHome"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="âš½ Home Goal"
            android:textSize="14sp"
            style="@style/Widget.Material3.Button"
            app:backgroundTint="@color/success"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoalAway"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="âš½ Away Goal"
            android:textSize="14sp"
            style="@style/Widget.Material3.Button"
            app:backgroundTint="@color/info"
            app:cornerRadius="12dp" />

    </LinearLayout>

    <!-- Card Actions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cards"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/on_surface"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnYellowCard"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="ðŸŸ¡ Yellow"
            android:textSize="14sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@color/warning"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRedCard"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="ðŸŸ¥ Red"
            android:textSize="14sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@color/error"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp" />

    </LinearLayout>

    <!-- Substitution -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubstitution"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="ðŸ”„ Substitution"
        android:textSize="16sp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:strokeColor="@color/primary"
        app:strokeWidth="2dp"
        app:cornerRadius="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Other Actions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other Events"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/on_surface"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFreeKick"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="Free Kick"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCorner"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:text="Corner"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOffside"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="Offside"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="8dp" />

    </LinearLayout>

</LinearLayout>

