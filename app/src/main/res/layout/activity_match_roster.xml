<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    tools:context=".ui.central.views.MatchRosterActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Player Roster"
            app:titleTextColor="@color/on_primary"
            android:background="@color/primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Stats Header -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Player Availability"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/playerStatsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12 available, 2 maybe, 1 unavailable, 2 no response"
                    android:textSize="14sp"
                    android:textColor="@color/on_surface_variant" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Filter Chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingHorizontal="16dp"
            android:paddingBottom="8dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/filterChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:chipSpacingHorizontal="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/allPlayersChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All (18)"
                    style="@style/Widget.Material3.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/availableChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available (12)"
                    style="@style/Widget.Material3.Chip.Filter"
                    app:chipBackgroundColor="@color/success_light" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/maybeChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maybe (2)"
                    style="@style/Widget.Material3.Chip.Filter"
                    app:chipBackgroundColor="@color/warning_light" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/unavailableChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unavailable (1)"
                    style="@style/Widget.Material3.Chip.Filter"
                    app:chipBackgroundColor="@color/error_light" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/noResponseChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Response (2)"
                    style="@style/Widget.Material3.Chip.Filter"
                    app:chipBackgroundColor="@color/surface_variant" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <!-- Players List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            android:paddingBottom="100dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_player_availability" />

    </LinearLayout>

    <!-- Bottom Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/surface"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/notifyPlayersButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Notify Players"
            android:textSize="14sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@color/primary"
            app:strokeWidth="2dp"
            app:icon="@drawable/ic_unicons_bell_24"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/setFormationButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Set Formation"
            android:textSize="14sp"
            android:textStyle="bold"
            style="@style/Widget.Material3.Button"
            app:backgroundTint="@color/primary"
            app:icon="@drawable/ic_unicons_soccer_24"
            app:iconGravity="textStart" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
