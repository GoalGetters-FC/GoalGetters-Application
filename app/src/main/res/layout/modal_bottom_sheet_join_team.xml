<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.shared.modals.JoinTeamBottomSheet"
        android:orientation="vertical"
        android:paddingVertical="48dp"
        android:paddingHorizontal="24dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    
    <!-- UI -->

    <TextView
            android:text="Join your friends"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

    <TextView
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="Enter your team and member code to jump right onto the field!"
            android:textAppearance="@style/MaterialAlertDialog.Material3.Body.Text"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1.5dp"
            app:boxStrokeColor="@color/surface_tint_night"
            app:hintTextColor="@color/scheme_bold"
            app:cursorColor="@color/surface_tint_night"
            android:layout_marginBottom="12dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_code_team"
                android:inputType="text"
                android:fontFamily="@font/variable_inter"
                android:hint="Team Code"
                android:layout_width="match_parent"
                android:layout_height="52dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1.5dp"
            app:boxStrokeColor="@color/surface_tint_night"
            app:hintTextColor="@color/scheme_bold"
            app:cursorColor="@color/surface_tint_night"
            android:layout_marginBottom="12dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_code_user"
                android:inputType="text"
                android:fontFamily="@font/variable_inter"
                android:hint="Member Code"
                android:layout_width="match_parent"
                android:layout_height="52dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:id="@+id/bt_continue"
            android:layout_height="52dp"
            android:layout_width="match_parent"
            android:text="Join"
            android:fontFamily="@font/variable_inter"
            android:textFontWeight="600"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="@color/primary"
            android:textColor="@color/scheme_bold"
            android:background="@drawable/button_border"/>

</LinearLayout>