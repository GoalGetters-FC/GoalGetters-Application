<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.shared.modals.JoinTeamBottomSheet"
        android:orientation="vertical"
        android:paddingTop="@dimen/modal_sheet_inset_yt"
        android:paddingBottom="@dimen/modal_sheet_inset_yb"
        android:paddingHorizontal="@dimen/modal_sheet_inset_x"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <!-- UI -->

    <TextView
            android:text="@string/modal_sheet_join_team_heading_text"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:layout_marginHorizontal="@dimen/modal_sheet_inset_x"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

    <Space
            android:layout_height="12dp"
            android:layout_width="0dp" />

    <TextView
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="@string/modal_sheet_join_team_message_text"
            android:textAppearance="@style/MaterialAlertDialog.Material3.Body.Text"
            android:layout_marginHorizontal="@dimen/modal_sheet_inset_x"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

    <Space
            android:layout_height="36dp"
            android:layout_width="0dp" />

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Local.Input.Layout"
            android:hint="@string/modal_sheet_text_input_hint_team_code"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_code_team"
                style="@style/Widget.Local.Input.Layout.EditText"
                android:inputType="textCapCharacters"
                android:maxLength="6"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <Space
            android:layout_height="12dp"
            android:layout_width="0dp" />

    <Space
            android:layout_height="24dp"
            android:layout_width="0dp" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_continue"
            android:text="@string/modal_sheet_join_team_button_continue_text"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9500"
            app:cornerRadius="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:ignore="HardcodedText" />

</LinearLayout>