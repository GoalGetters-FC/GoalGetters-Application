<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_container"
        app:cardCornerRadius="16dp"
        app:strokeWidth="0dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <!-- Notification Icon Container -->
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                
                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/primary_light"
                    android:layout_height="56dp"
                    android:layout_width="56dp">

                    <ImageView
                        android:id="@+id/notificationIcon"
                        android:src="@drawable/ic_unicons_bell_24"
                        android:importantForAccessibility="no"
                        app:tint="@color/primary"
                        android:layout_gravity="center"
                        android:layout_height="28dp"
                        android:layout_width="28dp" />

                </androidx.coordinatorlayout.widget.CoordinatorLayout>

                <!-- Unread Indicator (modern pulsing dot) -->
                <View
                    android:id="@+id/unreadIndicator"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/primary"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_gravity="bottom|end"
                    android:layout_height="12dp"
                    android:layout_width="12dp"
                    android:visibility="gone" />

            </FrameLayout>

            <Space
                android:layout_height="0dp"
                android:layout_width="20dp" />

            <!-- Notification Content -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp">

                <!-- Title Row -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/notificationTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="New Practice Scheduled!"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:fontFamily="@font/variable_inter" />

                    <Space
                        android:layout_height="0dp"
                        android:layout_width="12dp" />

                    <!-- Notification Type Chip -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_type_chip"
                        app:cardBackgroundColor="@color/surface_variant"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp"
                        app:cardElevation="0dp"
                        app:contentPadding="2dp"
                        app:contentPaddingRight="8dp"
                        app:contentPaddingLeft="8dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">

                        <TextView
                            android:id="@+id/tv_type_chip"
                            android:text="PRACTICE"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/variable_inter"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Message Text -->
                <TextView
                    android:id="@+id/notificationText"
                    android:text="Don't forget to pack your shin guards for tomorrow's session. See you on the field!"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:fontFamily="@font/variable_inter"
                    android:maxLines="5"
                    android:ellipsize="end"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />

                <!-- Timestamp -->
                <TextView
                    android:id="@+id/notificationTimestamp"
                    android:text="2 days ago"
                    android:textColor="@color/text_tertiary"
                    android:textSize="12sp"
                    android:fontFamily="@font/variable_inter"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

            </LinearLayout>

            <Space
                android:layout_height="0dp"
                android:layout_width="12dp" />

            <!-- Action Menu -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_action_menu"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/surface_elevated"
                app:cardCornerRadius="12dp"
                app:strokeWidth="0dp"
                app:cardElevation="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp"
                android:layout_width="40dp">

                <ImageView
                    android:id="@+id/actionMenuButton"
                    android:src="@drawable/ic_unicons_ellipsis_v"
                    android:importantForAccessibility="no"
                    app:tint="@color/text_secondary"
                    android:layout_gravity="center"
                    android:layout_height="20dp"
                    android:layout_width="20dp" />

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
