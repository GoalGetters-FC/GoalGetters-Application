<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with back button -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:title="Player Profile"
            app:titleTextColor="@color/black"
            app:titleCentered="true"
            app:navigationIcon="@drawable/ic_unicons_arrow_left"
            app:navigationIconTint="@color/black" />

        <!-- Player Header Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Player Avatar -->
            <ImageView
                android:id="@+id/playerAvatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_background"
                android:src="@drawable/ic_unicons_user_24"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Player Name -->
            <TextView
                android:id="@+id/playerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Matthew Pieterse"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/variable_inter"
                app:layout_constraintStart_toEndOf="@id/playerAvatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/playerAvatar" />

            <!-- Player Age -->
            <TextView
                android:id="@+id/playerAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="16 yo"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:fontFamily="@font/variable_inter"
                app:layout_constraintStart_toEndOf="@id/playerAvatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/playerName" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Player Details Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- General Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="General"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/variable_inter" />

            <!-- Player Status Dropdown -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Player Status"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/playerStatusDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fulltime Player"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Player Role Dropdown -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Player Role"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/playerRoleDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Center Striker"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Player Details Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/variable_inter" />

            <!-- Player Name Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Player Name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/playerNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Matthew Pieterse"
                    android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Player Number Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Player Number"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/playerNumberInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Player Email Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Player Email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/playerEmailInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="matthew@example.com"
                    android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Date of Birth Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Date of Birth"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/playerDateOfBirthInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2008-05-15"
                    android:inputType="date" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Player Contact Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Player Contact"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/playerContactInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+27 82 123 4567"
                    android:inputType="phone" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Status Chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none"
            android:paddingHorizontal="20dp"
            android:paddingBottom="16dp">

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCaptain"
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Captain"
                    android:visibility="gone"
                    app:chipIcon="@drawable/ic_unicons_hat_24"
                    app:chipIconTint="@color/yellow"
                    app:chipBackgroundColor="@color/yellow"
                    android:textColor="@color/black"
                    android:fontFamily="@font/variable_inter"
                    android:minHeight="28dp"
                    android:textSize="13sp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipNew"
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New"
                    android:visibility="gone"
                    app:chipIcon="@drawable/ic_unicons_user_plus_16"
                    app:chipIconTint="@color/info"
                    app:chipBackgroundColor="@color/info_light"
                    android:textColor="@color/black"
                    android:fontFamily="@font/variable_inter"
                    android:minHeight="28dp"
                    android:textSize="13sp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipInjured"
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Injured"
                    android:visibility="gone"
                    app:chipIcon="@drawable/ic_unicons_archive_alt"
                    app:chipIconTint="@color/error"
                    app:chipBackgroundColor="@color/error_light"
                    android:textColor="@color/error_dark"
                    android:fontFamily="@font/variable_inter"
                    android:minHeight="28dp"
                    android:textSize="13sp" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <!-- Contact Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Information"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/playerEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: john.doe@example.com"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/playerPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone: +1 234 567 8900"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/playerJoinedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Joined: 2024-01-15"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:fontFamily="@font/variable_inter" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Statistics Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                    android:text="Season Statistics"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="16dp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3">

                    <!-- Goals -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Goals"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/variable_inter"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/statsGoals"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="15"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/variable_inter"
                        android:layout_marginBottom="8dp" />

                    <!-- Assists -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Assists"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/variable_inter"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/statsAssists"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="8"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/variable_inter"
                        android:layout_marginBottom="8dp" />

                    <!-- Matches -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Matches"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/variable_inter"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/statsMatches"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="25"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/variable_inter"
                        android:layout_marginBottom="8dp" />

                    <!-- Yellow Cards -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Yellow Cards"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/variable_inter"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/statsYellowCards"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="2"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/variable_inter"
                        android:layout_marginBottom="8dp" />

                    <!-- Red Cards -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Red Cards"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/variable_inter"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/statsRedCards"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/variable_inter"
                        android:layout_marginBottom="8dp" />

                    <!-- Clean Sheets -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Clean Sheets"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/variable_inter"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/statsCleanSheets"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="16sp"
        android:textStyle="bold"
                        android:fontFamily="@font/variable_inter"
                        android:layout_marginBottom="8dp" />

                </GridLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
        android:gravity="center"
            android:paddingHorizontal="20dp"
            android:paddingBottom="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditProfile"
                style="@style/Widget.GoalGetters.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:icon="@drawable/ic_unicons_settings_24"
                android:iconTint="#007AFF"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSendMessage"
                style="@style/Widget.GoalGetters.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Message"
                android:icon="@drawable/ic_unicons_message_24"
                android:iconTint="#007AFF"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewHistory"
                style="@style/Widget.GoalGetters.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View History"
                android:icon="@drawable/ic_unicons_chart_24"
                android:iconTint="#007AFF" />

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView> 