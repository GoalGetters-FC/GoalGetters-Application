<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161620">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <!-- Custom Header with Back Button and Centered Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#161620"
            android:paddingTop="48dp"
            android:paddingBottom="20dp"
            android:paddingHorizontal="20dp"
            android:fitsSystemWindows="true">

            <!-- Back Button and Title Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_unicons_arrow_left"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    app:tint="#FFFFFF" />

                <!-- Centered Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Player Profile"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/variable_inter"
                    android:gravity="center" />

                <!-- Spacer to balance the back button -->
                <Space
                    android:layout_width="48dp"
                    android:layout_height="0dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Content Section -->
        <com.google.android.material.card.MaterialCardView
            app:contentPadding="0dp"
            app:contentPaddingTop="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardPreventCornerOverlap="false"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.TopCorner40"
            app:strokeWidth="0dp"
            app:cardElevation="6dp"
            android:elevation="6dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

        <!-- Player Header Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Information"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/variable_inter"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="0dp" />

        <!-- Player Avatar and Basic Info -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#F8F9FA"
            app:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Player Profile"
                        android:textSize="14sp"
                        android:textColor="#4B4D4F"
                        android:textFontWeight="600"
                        android:fontFamily="@font/variable_inter"
                        android:layout_gravity="center_vertical" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:src="@drawable/ic_unicons_user_24"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="#4B4D4F" />
                </LinearLayout>

                <!-- Player Avatar and Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/playerAvatar"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/circle_background"
                        android:src="@drawable/ic_unicons_user_24"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/playerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textColor="#161620"
                            android:textSize="18sp"
                            android:textFontWeight="600"
                            android:fontFamily="@font/variable_inter" />

                        <TextView
                            android:id="@+id/playerAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 years old"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:fontFamily="@font/variable_inter" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Player Name -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:contentPadding="16dp"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player Name"
                    android:textSize="12sp"
                    android:textColor="#4B4D4F"
                    android:textFontWeight="600"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/playerNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter player name"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/variable_inter"
                    android:textColor="#161620"
                    android:textSize="16sp"
                    android:textColorHint="#999999"
                    android:background="@android:color/transparent"
                    android:enabled="false" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Player Number -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPlayerNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:contentPadding="16dp"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player Number"
                    android:textSize="12sp"
                    android:textColor="#4B4D4F"
                    android:textFontWeight="600"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/playerNumberInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter player number"
                    android:inputType="number"
                    android:fontFamily="@font/variable_inter"
                    android:textColor="#161620"
                    android:textSize="16sp"
                    android:textColorHint="#999999"
                    android:background="@android:color/transparent"
                    android:enabled="false" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Player Email -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:contentPadding="16dp"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="12sp"
                    android:textColor="#4B4D4F"
                    android:textFontWeight="600"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/playerEmailInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter email address"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/variable_inter"
                    android:textColor="#161620"
                    android:textSize="16sp"
                    android:textColorHint="#999999"
                    android:background="@android:color/transparent"
                    android:enabled="false" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Date of Birth -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:contentPadding="16dp"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:textSize="12sp"
                    android:textColor="#4B4D4F"
                    android:textFontWeight="600"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/playerDateOfBirthInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DD/MM/YYYY"
                    android:inputType="date"
                    android:fontFamily="@font/variable_inter"
                    android:textColor="#161620"
                    android:textSize="16sp"
                    android:textColorHint="#999999"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:clickable="true" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Player Contact -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:contentPadding="16dp"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="12sp"
                    android:textColor="#4B4D4F"
                    android:textFontWeight="600"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/playerContactInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter phone number"
                    android:inputType="phone"
                    android:fontFamily="@font/variable_inter"
                    android:textColor="#161620"
                    android:textSize="16sp"
                    android:textColorHint="#999999"
                    android:background="@android:color/transparent"
                    android:enabled="false" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Player Status -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:contentPadding="16dp"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player Status"
                    android:textSize="12sp"
                    android:textColor="#4B4D4F"
                    android:textFontWeight="600"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/playerStatusDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select player status"
                    android:inputType="none"
                    android:fontFamily="@font/variable_inter"
                    android:textColor="#161620"
                    android:textSize="16sp"
                    android:textColorHint="#999999"
                    android:background="@android:color/transparent"
                    android:enabled="false"
                    android:clickable="false"
                    android:focusable="false" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Player Role -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:contentPadding="16dp"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player Role"
                    android:textSize="12sp"
                    android:textColor="#4B4D4F"
                    android:textFontWeight="600"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/playerRoleDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select player role"
                    android:inputType="none"
                    android:fontFamily="@font/variable_inter"
                    android:textColor="#161620"
                    android:textSize="16sp"
                    android:textColorHint="#999999"
                    android:background="@android:color/transparent"
                    android:enabled="false"
                    android:clickable="false"
                    android:focusable="false" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Statistics Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Season Statistics"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/variable_inter"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="8dp" />

        <!-- Statistics Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#F8F9FA"
            app:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Performance Stats"
                        android:textSize="14sp"
                        android:textColor="#4B4D4F"
                        android:textFontWeight="600"
                        android:fontFamily="@font/variable_inter"
                        android:layout_gravity="center_vertical" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:src="@drawable/ic_unicons_chart_24"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="#4B4D4F" />
                </LinearLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3">

                    <!-- Goals -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Goals"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:fontFamily="@font/variable_inter"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/statsGoals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textColor="#161620"
                            android:textSize="18sp"
                            android:textFontWeight="600"
                            android:fontFamily="@font/variable_inter" />

                    </LinearLayout>

                    <!-- Assists -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Assists"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:fontFamily="@font/variable_inter"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/statsAssists"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:textColor="#161620"
                            android:textSize="18sp"
                            android:textFontWeight="600"
                            android:fontFamily="@font/variable_inter" />

                    </LinearLayout>

                    <!-- Matches -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Matches"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:fontFamily="@font/variable_inter"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/statsMatches"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25"
                            android:textColor="#161620"
                            android:textSize="18sp"
                            android:textFontWeight="600"
                            android:fontFamily="@font/variable_inter" />

                    </LinearLayout>

                    <!-- Yellow Cards -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yellow Cards"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:fontFamily="@font/variable_inter"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/statsYellowCards"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="#161620"
                            android:textSize="18sp"
                            android:textFontWeight="600"
                            android:fontFamily="@font/variable_inter" />

                    </LinearLayout>

                    <!-- Red Cards -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Red Cards"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:fontFamily="@font/variable_inter"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/statsRedCards"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#161620"
                            android:textSize="18sp"
                            android:textFontWeight="600"
                            android:fontFamily="@font/variable_inter" />

                    </LinearLayout>

                    <!-- Clean Sheets -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clean Sheets"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:fontFamily="@font/variable_inter"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/statsCleanSheets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11"
                            android:textColor="#161620"
                            android:textSize="18sp"
                            android:textFontWeight="600"
                            android:fontFamily="@font/variable_inter" />

                    </LinearLayout>

                </GridLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginBottom="20dp">

            <!-- Edit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Edit Profile"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:fontFamily="@font/variable_inter"
                app:backgroundTint="@color/primary"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_unicons_settings_24"
                app:iconTint="@color/white"
                android:minWidth="120dp"
                style="@style/Widget.MaterialComponents.Button" />

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveProfile"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Save"
                android:visibility="gone"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:fontFamily="@font/variable_inter"
                app:backgroundTint="@color/success"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_unicons_check_24"
                app:iconTint="@color/white"
                android:minWidth="100dp"
                style="@style/Widget.MaterialComponents.Button" />

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelEdit"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Cancel"
                android:visibility="gone"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:textFontWeight="600"
                android:fontFamily="@font/variable_inter"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_unicons_times_24"
                app:iconTint="@color/text_secondary"
