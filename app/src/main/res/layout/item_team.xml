<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/divider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Team Icon -->
        <ImageView
            android:id="@+id/teamIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_unicons_soccer_24"
            android:background="@drawable/circle_background"
            android:layout_marginEnd="16dp"
            app:tint="@color/yellow" />

        <!-- Team Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/teamName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="U15a Football"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/variable_inter" />

                <TextView
                    android:id="@+id/currentTeamBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Team"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@drawable/current_team_badge"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:visibility="gone"
                    android:fontFamily="@font/variable_inter" />

            </LinearLayout>

            <TextView
                android:id="@+id/teamRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coach"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/variable_inter" />

            <TextView
                android:id="@+id/memberCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 members"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/variable_inter" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/switchTeamButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch to this team"
                android:textSize="12sp"
                android:minHeight="32dp"
                android:paddingHorizontal="12dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                app:strokeColor="@color/text_secondary"
                app:strokeWidth="1dp"
                android:layout_marginBottom="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteTeamButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete team"
                android:textSize="12sp"
                android:minHeight="32dp"
                android:paddingHorizontal="12dp"
                android:textColor="@color/error"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 