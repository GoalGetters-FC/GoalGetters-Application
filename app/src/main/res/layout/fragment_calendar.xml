<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <!-- Main calendar container with proper proportions -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <!-- Header with month navigation -->

        <!-- Calendar section (60% of available height) -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

            <!-- Day headers -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="12dp"
                    android:background="#F5F6F7">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SUN"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/variable_inter" />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MON"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/variable_inter" />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TUE"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/variable_inter" />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="WED"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/variable_inter" />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="THU"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/variable_inter" />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="FRI"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/variable_inter" />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SAT"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/variable_inter" />

            </LinearLayout>

            <!-- Calendar grid with fixed height to prevent overflow -->
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:clipToPadding="false"
                    android:background="#F5F6F7"
                    android:overScrollMode="never" />

        </LinearLayout>

        <!-- Event details section (40% of available height) -->
        <LinearLayout
                android:id="@+id/selectedDayEventsSection"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:orientation="vertical"
                android:elevation="4dp"
                android:clipToPadding="false">

            <!-- Header with selected date and event count -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="12dp">

                <ImageView
                        android:src="@drawable/xic_x16_uic_line_calender"
                        android:importantForAccessibility="no"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="12dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                <TextView
                        android:id="@+id/selectedDateText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/variable_inter" />

            </LinearLayout>

            <!-- Events list container with proper scrolling -->
            <FrameLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">

                <!-- Events RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_selected_day_events"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:scrollbars="vertical"
                        android:fadingEdge="vertical"
                        android:fadingEdgeLength="24dp"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="20dp"
                        android:overScrollMode="ifContentScrolls"
                        android:visibility="gone" />

                <!-- No events message with improved styling -->
                <LinearLayout
                        android:id="@+id/noEventsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp"
                        android:visibility="visible">

                    <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/xic_x24_uic_line_meeting_board"
                            android:layout_marginBottom="10dp"
                            android:alpha="0.6"
                            app:tint="#B1B3BC" />

                    <TextView
                            android:id="@+id/noEventsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time to polish your boots"
                            android:textSize="16sp"
                            android:textColor="#B1B3BC"
                            android:gravity="center"
                            android:textFontWeight="700"
                            android:fontFamily="@font/variable_inter"
                            android:layout_marginBottom="10dp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:maxWidth="255dp"
                            android:layout_height="wrap_content"
                            android:text="It looks like you don't have any events scheduled for today. Check back tomorrow for fresh fixtures or tap the + button to add an event!"
                            android:textSize="11sp"
                            android:textColor="#B1B3BC"
                            android:gravity="center"
                            android:fontFamily="@font/variable_inter" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Floating Action Button for adding events -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            style="@style/Widget.Local.FloatingActionButton"
            android:src="@drawable/xic_x24_uic_line_plus"
            android:importantForAccessibility="no"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

</androidx.coordinatorlayout.widget.CoordinatorLayout> 