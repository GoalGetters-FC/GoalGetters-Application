<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:padding="2dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            tools:ignore="UselessParent">

        <!-- Day container for interaction -->
        <FrameLayout
                android:id="@+id/dayContainer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/calendar_day_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="2dp"
                tools:ignore="TouchTargetSizeCheck">

            <!-- Day number -->
            <TextView
                    android:id="@+id/dayNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/variable_inter"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

        </FrameLayout>

        <!-- Event dots container with improved layout -->
        <LinearLayout
                android:id="@+id/eventDotsContainer"
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">

            <!-- Practice event dot -->
            <View
                    android:id="@+id/eventDot1"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/calendar_event_dot_practice"
                    android:visibility="gone"
                    android:layout_marginHorizontal="1dp" />

            <!-- Match/Game event dot -->
            <View
                    android:id="@+id/eventDot2"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/calendar_event_dot_game"
                    android:visibility="gone"
                    android:layout_marginHorizontal="1dp" />

            <!-- Other event dot -->
            <View
                    android:id="@+id/eventDot3"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/calendar_event_dot_other"
                    android:visibility="gone"
                    android:layout_marginHorizontal="1dp" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout> 