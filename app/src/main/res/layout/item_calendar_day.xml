<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Day container for interaction -->
        <FrameLayout
            android:id="@+id/dayContainer"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/day_background"
            android:clickable="true"
            android:focusable="true">

            <!-- Day number -->
            <TextView
                android:id="@+id/dayNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center" />

        </FrameLayout>

        <!-- Event dots container -->
        <LinearLayout
            android:id="@+id/eventDotsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="2dp">

            <!-- Event dots will be added programmatically -->
            <View
                android:id="@+id/eventDot1"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/event_dot_practice"
                android:visibility="gone"
                android:layout_marginHorizontal="1dp" />

            <View
                android:id="@+id/eventDot2"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/event_dot_game"
                android:visibility="gone"
                android:layout_marginHorizontal="1dp" />

            <View
                android:id="@+id/eventDot3"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/event_dot_other"
                android:visibility="gone"
                android:layout_marginHorizontal="1dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout> 