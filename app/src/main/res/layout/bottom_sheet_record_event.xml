<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Record Event"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/variable_inter" />

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_unicons_close_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            app:tint="@color/text_secondary" />

    </LinearLayout>

    <!-- Event Type Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Type"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:fontFamily="@font/variable_inter"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/eventTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/spinner_background"
        android:layout_marginBottom="20dp" />

    <!-- Player Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Player"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:fontFamily="@font/variable_inter"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playerRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/recycler_background"
        android:layout_marginBottom="20dp" />

    <!-- Goal Type Selection (Hidden by default) -->
    <LinearLayout
        android:id="@+id/goalTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal Type"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:fontFamily="@font/variable_inter"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/goalTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

    <!-- Card Type Selection (Hidden by default) -->
    <LinearLayout
        android:id="@+id/cardTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Type"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:fontFamily="@font/variable_inter"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/cardTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

    <!-- Substitution Selection (Hidden by default) -->
    <LinearLayout
        android:id="@+id/substitutionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Out"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:fontFamily="@font/variable_inter"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playerOutRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/recycler_background"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player In"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:fontFamily="@font/variable_inter"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playerInRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/recycler_background"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.GoalGetters.Button.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Cancel"
            android:layout_marginEnd="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecordEvent"
            style="@style/Widget.GoalGetters.Button.Primary"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Record Event"
            android:enabled="false" />

    </LinearLayout>

</LinearLayout> 