<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#161620"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <!-- UI -->

    <com.ggetters.app.ui.shared.components.HomeViewHeaderWidget
            android:id="@+id/widget_header"
            tools:widget_heading="example@domain.com"
            tools:widget_message="example@domain.com"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

    <com.google.android.material.card.MaterialCardView
            app:contentPadding="16dp"
            app:contentPaddingBottom="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardPreventCornerOverlap="false"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.TopCorner40"
            app:strokeWidth="0dp"
            app:cardElevation="6dp"
            android:elevation="6dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        <ScrollView
                android:layout_height="match_parent"
                android:layout_width="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                <com.ggetters.app.ui.shared.components.OptionCardWidget
                        android:id="@+id/cv_option_account"
                        app:widget_text="Account"
                        app:widget_icon="@drawable/xic_x36_uic_line_user"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" />

                <Space
                        android:layout_height="12dp"
                        android:layout_width="0dp" />

                <com.ggetters.app.ui.shared.components.OptionCardWidget
                        android:id="@+id/cv_option_settings"
                        app:widget_text="Settings"
                        app:widget_icon="@drawable/xic_x36_uic_line_cog"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" />

                <Space
                        android:layout_height="12dp"
                        android:layout_width="0dp" />

                <com.ggetters.app.ui.shared.components.OptionCardWidget
                        android:id="@+id/cv_option_notifications"
                        app:widget_text="Notifications"
                        app:widget_icon="@drawable/xic_x36_uic_line_bell"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" />

                <Space
                        android:layout_height="12dp"
                        android:layout_width="0dp" />

                <com.ggetters.app.ui.shared.components.OptionCardWidget
                        android:id="@+id/cv_option_privacy"
                        app:widget_text="Privacy policy"
                        app:widget_icon="@drawable/xic_x36_uic_line_shield_check"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" />

                <Space
                        android:layout_height="12dp"
                        android:layout_width="0dp" />

                <com.ggetters.app.ui.shared.components.OptionCardWidget
                        android:id="@+id/cv_option_contact"
                        app:widget_text="Contact the developers"
                        app:widget_icon="@drawable/xic_x36_uic_line_comment_alt_lines"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" />

                <Space
                        android:layout_height="12dp"
                        android:layout_width="0dp" />

                <com.ggetters.app.ui.shared.components.OptionCardWidget
                        android:id="@+id/cv_option_faq"
                        app:widget_text="@string/help_faq"
                        app:widget_icon="@drawable/xic_x36_uic_line_question_circle"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" />

                <Space
                        android:layout_height="32dp"
                        android:layout_width="0dp" />

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/bt_logout"
                        android:text="Logout"
                        android:textColor="#FFFFFF"
                        android:paddingHorizontal="24dp"
                        android:backgroundTint="#FF9500"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        tools:ignore="HardcodedText" />

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>