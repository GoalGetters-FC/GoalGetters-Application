<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161620">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#161620"
            android:elevation="0dp"
            app:navigationIcon="@drawable/ic_unicons_arrow_left"
            app:navigationIconTint="@color/white"
            app:title="Team Details"
            app:titleTextColor="@color/white"
            app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:menu="@menu/menu_team_detail_toolbar" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardPreventCornerOverlap="false"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.TopCorner40"
            app:strokeWidth="0dp"
            app:cardElevation="6dp"
            android:elevation="6dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Team Header Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:id="@+id/teamNameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Team Name"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="@font/variable_inter"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:id="@+id/teamDescriptionText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/variable_inter"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/teamCompositionText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Composition"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@font/variable_inter"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:id="@+id/teamAgeGroupText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age Group"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@font/variable_inter" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Stats Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/memberCountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/yellow"
                                android:fontFamily="@font/variable_inter" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Members"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@font/variable_inter" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/coachCountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/yellow"
                                android:fontFamily="@font/variable_inter" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coaches"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@font/variable_inter" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/playerCountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/yellow"
                                android:fontFamily="@font/variable_inter" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Players"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@font/variable_inter" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Actions -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team Actions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/variable_inter"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/viewPlayersButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="View Players"
                            android:textColor="@color/black"
                            app:backgroundTint="@color/primary"
                            app:cornerRadius="16dp"
                            style="@style/Widget.MaterialComponents.Button" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/editTeamButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="Edit Team"
                            android:textColor="@color/black"
                            app:backgroundTint="@color/primary"
                            app:cornerRadius="16dp"
                            style="@style/Widget.MaterialComponents.Button" />

                        

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/inviteMembersButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Invite Members"
                            android:textColor="@color/black"
                            app:backgroundTint="@color/primary"
                            app:cornerRadius="16dp"
                            style="@style/Widget.MaterialComponents.Button" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>