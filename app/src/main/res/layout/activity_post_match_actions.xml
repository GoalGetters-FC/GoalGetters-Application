<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            android:background="@color/surface"
            android:elevation="2dp">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_unicons_arrow_left"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                app:tint="@color/text_secondary" />

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Match Results"
                android:textColor="@color/on_surface"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/variable_inter"
                android:gravity="center" />

            <!-- Spacer -->
            <View
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <!-- Match Result Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/matchResultCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/success_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Teams and Score -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Home Team -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/homeTeamName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Goal Getters FC"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface"
                            android:gravity="center"
                            tools:text="Goal Getters FC" />

                    </LinearLayout>

                    <!-- Score -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/finalHomeScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface"
                            android:background="@drawable/score_background"
                            android:padding="12dp"
                            android:minWidth="56dp"
                            android:gravity="center"
                            tools:text="2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface"
                            android:layout_marginHorizontal="8dp" />

                        <TextView
                            android:id="@+id/finalAwayScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface"
                            android:background="@drawable/score_background"
                            android:padding="12dp"
                            android:minWidth="56dp"
                            android:gravity="center"
                            tools:text="1" />

                    </LinearLayout>

                    <!-- Away Team -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/awayTeamName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Opponents FC"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface"
                            android:gravity="center"
                            tools:text="Opponents FC" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Match Result Text -->
                <TextView
                    android:id="@+id/matchResultText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Victory!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    tools:text="Victory!" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShareResults"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Share Results"
                android:textSize="14sp"
                android:drawableTop="@drawable/ic_unicons_share_24"
                android:drawablePadding="4dp"
                style="@style/Widget.Material3.Button"
                app:backgroundTint="@color/primary"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveMatch"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Save Match"
                android:textSize="14sp"
                android:drawableTop="@drawable/ic_unicons_save_24"
                android:drawablePadding="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/primary"
                app:cornerRadius="12dp" />

        </LinearLayout>

        <!-- Secondary Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewReport"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="View Report"
                android:textSize="12sp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackToCalendar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Back to Calendar"
                android:textSize="12sp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="8dp" />

        </LinearLayout>

        <!-- Player Statistics Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player Statistics"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <!-- Stats Filter Chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/statsFilterChips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">

                <!-- Chips will be added programmatically -->

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <!-- Player Stats RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playerStatsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:nestedScrollingEnabled="false"
            tools:itemCount="3"
            tools:listitem="@layout/item_player_stats" />

    </LinearLayout>

</ScrollView>
