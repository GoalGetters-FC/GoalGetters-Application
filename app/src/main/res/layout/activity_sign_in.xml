<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="#161620"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <!-- UI -->

    <ImageView
            android:id="@+id/iv_logo"
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:importantForAccessibility="no"
            android:src="@drawable/gg_applogo_500"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline" />

    <!-- Content -->

    <com.google.android.material.card.MaterialCardView
            android:layout_height="0dp"
            android:layout_width="match_parent"
            app:contentPadding="20dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Local.Curved.TopA40"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="0dp"
            android:elevation="6dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.core.widget.NestedScrollView
                android:layout_height="match_parent"
                android:layout_width="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                <!-- Header -->

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:textSize="28sp"
                        android:fontFamily="@font/variable_inter"
                        android:textFontWeight="600"
                        android:text="@string/sign_in_header_text"
                        android:textColor="@color/scheme_bold"
                        android:layout_marginBottom="48dp" />

                <!-- Inputs -->

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                    <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.Local.Input.Layout"
                            android:hint="@string/sign_in_input_identity_hint"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_identity"
                                style="@style/Widget.Local.Input.Layout.EditText"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Space
                            android:layout_height="12dp"
                            android:layout_width="0dp" />

                    <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.Local.Input.Layout"
                            android:hint="@string/sign_in_input_password_hint"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleTint="#161620"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_password"
                                style="@style/Widget.Local.Input.Layout.EditText"
                                android:inputType="textPassword"
                                android:maxLines="1"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Space
                            android:layout_height="12dp"
                            android:layout_width="0dp" />

                    <!-- Hyperlinks -->

                    <TextView
                            android:id="@+id/tv_forgot_password"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textAlignment="textEnd"
                            android:textSize="14sp"
                            android:fontFamily="@font/variable_inter"
                            android:textFontWeight="600"
                            android:text="@string/sign_in_text_view_forgot_password"
                            android:textColor="@color/scheme_bold"
                            android:layout_marginBottom="48dp"
                            android:layout_marginEnd="4dp" />

                </LinearLayout>

                <!-- Controls -->

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                    <Button
                            android:id="@+id/bt_sign_in"
                            android:layout_height="52dp"
                            android:layout_width="match_parent"
                            android:text="@string/sign_in_button_sign_in"
                            android:fontFamily="@font/variable_inter"
                            android:textFontWeight="600"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:backgroundTint="@color/primary"
                            android:textColor="@color/scheme_bold"
                            android:background="@drawable/button_border"
                            android:layout_marginBottom="48dp" />

                    <!-- Divider -->

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="48dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content">

                        <View
                                android:layout_width="40dp"
                                android:layout_height="1dp"
                                android:background="@color/surface_bold"
                                android:layout_gravity="center_vertical" />

                        <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/sign_in_divider_text"
                                android:fontFamily="@font/variable_inter"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@color/surface_bold"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp" />

                        <View
                                android:layout_width="40dp"
                                android:layout_height="1dp"
                                android:background="@color/surface_bold"
                                android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <!-- SSO Logins -->

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content">

                        <ImageButton
                                android:id="@+id/bt_google"
                                android:layout_height="52dp"
                                android:layout_width="52dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_google"
                                android:background="@android:color/transparent"
                                android:contentDescription="@string/sign_in_button_sso_description" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.google.android.material.card.MaterialCardView>

    <!-- Guidelines -->

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout> 