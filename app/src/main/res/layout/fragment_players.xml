<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top Summary Chips Row -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/summaryChipGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:singleLine="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPlayersCount"
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Players: 15"
            app:chipIcon="@drawable/ic_unicons_user_24"
            app:chipIconTint="#007AFF"
            app:chipBackgroundColor="#E3F0FF"
            android:textColor="#000000" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAssistantsCount"
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assistants: 2"
            app:chipIcon="@drawable/ic_unicons_handshake_24"
            app:chipIconTint="#007AFF"
            app:chipBackgroundColor="#E3F0FF"
            android:textColor="#000000" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCoachCount"
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coach: 1"
            app:chipIcon="@drawable/ic_unicons_hat_24"
            app:chipIconTint="#007AFF"
            app:chipBackgroundColor="#E3F0FF"
            android:textColor="#000000" />
    </com.google.android.material.chip.ChipGroup>

    <!-- Filter Chips Row -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/filterChipGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        app:singleSelection="true"
        app:layout_constraintTop_toBottomOf="@id/summaryChipGroup"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFilterAll"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#E3F0FF" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFilterPlayers"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Players"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#E3F0FF" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFilterCoaches"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coaches"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#E3F0FF" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFilterGoalkeepers"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goalkeepers"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#E3F0FF" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFilterNew"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New members"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#E3F0FF" />
    </com.google.android.material.chip.ChipGroup>

    <!-- Player List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playersRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/filterChipGroup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/emptyStateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No players found"
        android:textColor="#999999"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 