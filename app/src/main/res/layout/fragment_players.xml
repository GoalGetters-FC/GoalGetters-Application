<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:title="Players"
        app:titleTextColor="@color/black"
        app:titleCentered="true"
        app:menu="@menu/menu_players_toolbar" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/summaryChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPlayersCount"
                style="@style/Widget.GoalGetters.Chip.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Players: 15"
                app:chipIcon="@drawable/ic_unicons_user_24"
                app:chipIconTint="#007AFF"
                android:textColor="@color/black" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAssistantsCount"
                style="@style/Widget.GoalGetters.Chip.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assistants: 2"
                app:chipIcon="@drawable/ic_unicons_handshake_24"
                app:chipIconTint="#007AFF"
                android:textColor="@color/black" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCoachCount"
                style="@style/Widget.GoalGetters.Chip.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coach: 1"
                app:chipIcon="@drawable/ic_unicons_hat_24"
                app:chipIconTint="#007AFF"
                android:textColor="@color/black" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <TextView
        android:id="@+id/emptyStateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No players found"
        android:textColor="#999999"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:paddingTop="32dp" />

</LinearLayout> 