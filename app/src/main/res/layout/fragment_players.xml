<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header with team info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical">

        <!-- Team Info (left) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teamNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="U18 Johannesburg"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/variable_inter" />

            <TextView
                android:id="@+id/teamSportText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Football (Soccer)"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/variable_inter" />

        </LinearLayout>

        <!-- Action Icons (right) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_unicons_bell_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="16dp"
                app:tint="@color/black" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_unicons_settings_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/black" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Players List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/emptyStateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_unicons_bell_24"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Started"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/variable_inter"
                android:layout_marginTop="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We couldn't find players in your team.\nCheck your internet connection to refresh or\nadd players to start scoring!"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/variable_inter"
                android:gravity="center"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Add Player FAB -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addPlayerFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:src="@drawable/ic_unicons_plus_24"
            app:backgroundTint="@color/yellow"
            app:tint="@color/black"
            app:elevation="8dp"
            app:pressedTranslationZ="12dp" />

    </FrameLayout>

</LinearLayout> 