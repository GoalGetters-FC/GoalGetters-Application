<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playerCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface_container"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Player Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Jersey Number -->
            <TextView
                android:id="@+id/jerseyNumber"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="10"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_on_accent"
                android:background="@drawable/jersey_number_background"
                android:gravity="center"
                android:layout_marginEnd="12dp"
                tools:text="10" />

            <!-- Player Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/playerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luke Jackson"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    tools:text="Luke Jackson" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/playerPosition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FW"
                        android:textSize="12sp"
                        android:textColor="@color/on_surface_variant"
                        android:background="@drawable/badge_background"
                        android:padding="4dp"
                        android:layout_marginEnd="8dp"
                        tools:text="FW" />

                    <TextView
                        android:id="@+id/minutesPlayed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90'"
                        android:textSize="12sp"
                        android:textColor="@color/on_surface_variant"
                        tools:text="90'" />

                </LinearLayout>

            </LinearLayout>

            <!-- Player Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/playerRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/success"
                    tools:text="8.5" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/ratingProgress"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:progress="85"
                    android:max="100"
                    app:indicatorColor="@color/success"
                    app:trackColor="@color/surface_container_high"
                    app:trackThickness="3dp"
                    tools:progress="85" />

            </LinearLayout>

        </LinearLayout>

        <!-- Statistics Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Goals & Assists -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goals"
                    android:textSize="10sp"
                    android:textColor="@color/on_surface_variant" />

                <TextView
                    android:id="@+id/goals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    tools:text="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assists"
                    android:textSize="10sp"
                    android:textColor="@color/on_surface_variant"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/assists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    tools:text="0" />

            </LinearLayout>

            <!-- Shots -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shots"
                    android:textSize="10sp"
                    android:textColor="@color/on_surface_variant" />

                <TextView
                    android:id="@+id/shots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2/4"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    tools:text="2/4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pass Acc"
                    android:textSize="10sp"
                    android:textColor="@color/on_surface_variant"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/passAccuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="89%"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    tools:text="89%" />

            </LinearLayout>

            <!-- Defensive -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tackles"
                    android:textSize="10sp"
                    android:textColor="@color/on_surface_variant" />

                <TextView
                    android:id="@+id/tackles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    tools:text="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fouls"
                    android:textSize="10sp"
                    android:textColor="@color/on_surface_variant"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/fouls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    tools:text="1" />

            </LinearLayout>

            <!-- Cards & Extra -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cards"
                    android:textSize="10sp"
                    android:textColor="@color/on_surface_variant" />

                <TextView
                    android:id="@+id/cards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    tools:text="-" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passes"
                    android:textSize="10sp"
                    android:textColor="@color/on_surface_variant"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/passes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 (89%)"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    tools:text="45 (89%)" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

