<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <!-- Banner Image -->
        <ImageView
            android:id="@+id/teamBannerImage"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/team_banner_default"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Rounded Team Logo (overlays banner) -->
        <ImageView
            android:id="@+id/teamLogo"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginTop="112dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/ic_unicons_soccer_24"
            android:elevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Team Name -->
        <TextView
            android:id="@+id/teamNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="Greenfield U16 Lions"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/teamLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Team Short Name / Code -->
        <TextView
            android:id="@+id/teamCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="U16-LIONS"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/teamNameText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Add divider below header -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/teamLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Core Team Details Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/teamDetailsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/teamCodeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/ageGroupText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age Group: U16"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/genderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender: Co-ed"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: Main Stadium"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/seasonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Season: 2025/2026"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/contactText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact: coach@email.com"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Add spacing and dividers between sections as needed -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/teamDetailsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Team Roles & Member Count Chips -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/roleChips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/teamDetailsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCoach"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coach: 1"
                app:chipIcon="@drawable/ic_unicons_hat_24"
                app:chipIconTint="#007AFF"
                app:chipBackgroundColor="#FFD400"
                android:textColor="#000000" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAssistants"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assistants: 2"
                app:chipIcon="@drawable/ic_unicons_handshake_24"
                app:chipIconTint="#007AFF"
                app:chipBackgroundColor="#E3F0FF"
                android:textColor="#000000" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPlayers"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Players: 15"
                app:chipIcon="@drawable/ic_unicons_user_24"
                app:chipIconTint="#007AFF"
                app:chipBackgroundColor="#E3F0FF"
                android:textColor="#000000" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Add spacing and dividers between sections as needed -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/roleChips"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Admin-Only Actions (Invite, Edit, Manage Roles, Delete) -->
        <LinearLayout
            android:id="@+id/adminActions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/roleChips"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInvite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button"
                android:text="Invite"
                android:icon="@drawable/ic_unicons_user_plus_16"
                android:iconTint="#007AFF"
                android:textColor="#007AFF"
                android:backgroundTint="#E3F0FF"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button"
                android:text="Edit"
                android:icon="@drawable/ic_unicons_settings_24"
                android:iconTint="#007AFF"
                android:textColor="#007AFF"
                android:backgroundTint="#E3F0FF"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnManageRoles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button"
                android:text="Roles"
                android:icon="@drawable/ic_unicons_handshake_24"
                android:iconTint="#007AFF"
                android:textColor="#007AFF"
                android:backgroundTint="#E3F0FF"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button"
                android:text="Delete"
                android:icon="@drawable/ic_unicons_archive_alt"
                android:iconTint="#FF3B30"
                android:textColor="#FF3B30"
                android:backgroundTint="#FFF0F0" />
        </LinearLayout>

        <!-- Add spacing and dividers between sections as needed -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/adminActions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Shared Actions (View Players, View Schedule, Leave Team) -->
        <LinearLayout
            android:id="@+id/sharedActions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/adminActions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewPlayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button"
                android:text="View Players"
                android:icon="@drawable/ic_unicons_group_24"
                android:iconTint="#007AFF"
                android:textColor="#007AFF"
                android:backgroundTint="#E3F0FF"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button"
                android:text="Schedule"
                android:icon="@drawable/ic_unicons_calender_24"
                android:iconTint="#007AFF"
                android:textColor="#007AFF"
                android:backgroundTint="#E3F0FF"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLeaveTeam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button"
                android:text="Leave Team"
                android:icon="@drawable/ic_unicons_arrow_right_24"
                android:iconTint="#FF3B30"
                android:textColor="#FF3B30"
                android:backgroundTint="#FFF0F0" />
            </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView> 