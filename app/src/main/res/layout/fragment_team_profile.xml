<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:title="Team Profile"
            app:titleTextColor="@color/black"
            app:titleCentered="true"
            app:menu="@menu/menu_team_profile_toolbar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Banner Image -->
            <ImageView
                android:id="@+id/teamBannerImage"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/team_banner_default"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Logo overlay -->
            <ImageView
                android:id="@+id/teamLogo"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginTop="-44dp"
                android:background="@drawable/circle_background"
                android:src="@drawable/ic_unicons_soccer_24"
                android:elevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/teamBannerImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Team Name -->
            <TextView
                android:id="@+id/teamNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:text="Greenfield U16 Lions"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintTop_toBottomOf="@id/teamLogo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Team Short Name / Code -->
            <TextView
                android:id="@+id/teamCodeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="U16-LIONS"
                android:textColor="#666666"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/teamNameText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Team Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/ageGroupText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age Group: U16"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/genderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender: Co-ed"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: Main Stadium"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/seasonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Season: 2025/2026"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/contactText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact: coach@email.com"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Roles and Options -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/roleChips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleLine="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipCoach"
                        style="@style/Widget.GoalGetters.Chip.Filled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coach: 1"
                        app:chipIcon="@drawable/ic_unicons_hat_24"
                        app:chipIconTint="#007AFF"
                        android:textColor="@color/black" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAssistants"
                        style="@style/Widget.GoalGetters.Chip.Outlined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assistants: 2"
                        app:chipIcon="@drawable/ic_unicons_handshake_24"
                        app:chipIconTint="#007AFF"
                        android:textColor="@color/black" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPlayers"
                        style="@style/Widget.GoalGetters.Chip.Outlined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Players: 15"
                        app:chipIcon="@drawable/ic_unicons_user_24"
                        app:chipIconTint="#007AFF"
                        android:textColor="@color/black" />
                </com.google.android.material.chip.ChipGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>

        <!-- Admin/Shared Actions -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInvite"
                    style="@style/Widget.GoalGetters.Button.Filled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invite"
                    android:icon="@drawable/ic_unicons_user_plus_16"
                    android:iconTint="#007AFF"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditTeam"
                    style="@style/Widget.GoalGetters.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:icon="@drawable/ic_unicons_settings_24"
                    android:iconTint="#007AFF"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnManageRoles"
                    style="@style/Widget.GoalGetters.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roles"
                    android:icon="@drawable/ic_unicons_handshake_24"
                    android:iconTint="#007AFF"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeleteTeam"
                    style="@style/Widget.GoalGetters.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:icon="@drawable/ic_unicons_archive_alt"
                    android:iconTint="#FF3B30"
                    android:textColor="#FF3B30"
                    android:backgroundTint="#FFF0F0" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Shared Actions -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewPlayers"
                    style="@style/Widget.GoalGetters.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Players"
                    android:icon="@drawable/ic_unicons_group_24"
                    android:iconTint="#007AFF"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewSchedule"
                    style="@style/Widget.GoalGetters.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule"
                    android:icon="@drawable/ic_unicons_calender_24"
                    android:iconTint="#007AFF"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLeaveTeam"
                    style="@style/Widget.GoalGetters.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leave Team"
                    android:icon="@drawable/ic_unicons_arrow_right_24"
                    android:iconTint="#FF3B30"
                    android:textColor="#FF3B30"
                    android:backgroundTint="#FFF0F0" />
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView> 