<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:padding="24dp">

        <!-- Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:contentPadding="20dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Event Category Icon -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/eventCategoryIcon"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="28dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="#F8F9FA"
                    app:contentPadding="0dp">

                    <TextView
                        android:id="@+id/eventCategory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="MATCH"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/variable_inter" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Event Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/eventName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team Training"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#161620"
                        android:fontFamily="@font/variable_inter"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/eventStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Standard"
                        android:textSize="14sp"
                        android:textColor="#4B4D4F"
                        android:fontFamily="@font/variable_inter"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/eventCreatedBy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Created by user123"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:fontFamily="@font/variable_inter" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Event Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:contentPadding="20dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#161620"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="16dp" />

                <!-- Date -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="#F8F9FA"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:src="@drawable/ic_unicons_calendar_24"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:tint="#4B4D4F"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/eventDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="December 15, 2025"
                            android:textSize="16sp"
                            android:textColor="#161620"
                            android:fontFamily="@font/variable_inter" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Time -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="#F8F9FA"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:src="@drawable/ic_unicons_clock_24"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:tint="#4B4D4F"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/eventTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="18:30"
                            android:textSize="16sp"
                            android:textColor="#161620"
                            android:fontFamily="@font/variable_inter" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Location -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="#F8F9FA"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:src="@drawable/ic_unicons_map_pin_24"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:tint="#4B4D4F"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/eventLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sports Complex A"
                            android:textSize="16sp"
                            android:textColor="#161620"
                            android:fontFamily="@font/variable_inter" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Description Card (Conditional) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/descriptionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:contentPadding="20dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#161620"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/eventDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Optional description text"
                    android:textSize="16sp"
                    android:textColor="#4B4D4F"
                    android:fontFamily="@font/variable_inter"
                    android:lineSpacingExtra="4dp"
                    android:background="@drawable/rounded_input_background"
                    android:padding="16dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Delete"
                android:textColor="@color/error"
                android:textSize="14sp"
                android:textFontWeight="600"
                android:fontFamily="@font/variable_inter"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/error"
                app:strokeWidth="1dp"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_unicons_trash_24"
                app:iconTint="@color/error"
                android:layout_marginEnd="12dp"
                android:minWidth="100dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Edit"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textFontWeight="600"
                android:fontFamily="@font/variable_inter"
                app:backgroundTint="@color/primary"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_unicons_settings_24"
                app:iconTint="@color/white"
                android:minWidth="100dp"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

</LinearLayout>
