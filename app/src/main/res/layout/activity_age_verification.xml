<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="32dp">

    <TextView
        android:id="@+id/ageVerificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age Verification"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your age:"
        android:textSize="18sp"
        android:textColor="@color/primary"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@id/ageEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/ageEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Age"
        android:inputType="number"
        android:textColor="@color/primary"
        android:textColorHint="@color/accent"
        android:backgroundTint="@color/primary"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/verifyButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/verifyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:backgroundTint="@color/primary"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/ageVerificationTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout> 