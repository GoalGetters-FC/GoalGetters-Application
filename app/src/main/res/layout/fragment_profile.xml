<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header with user info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:elevation="2dp">

        <!-- Profile Avatar -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/profileAvatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_unicons_user_24"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/active_indicator_background" />

        </FrameLayout>

        <!-- User Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/variable_inter" />

            <TextView
                android:id="@+id/userHandleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/variable_inter" />

            <TextView
                android:id="@+id/teamNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="12sp"
                android:textColor="@color/text_tertiary"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/variable_inter" />

        </LinearLayout>


    </LinearLayout>

    <!-- Settings Menu -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Account Settings -->
            <LinearLayout
                android:id="@+id/accountItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_unicons_user_24"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Account"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/variable_inter" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_unicons_arrow_right_24"
                    app:tint="@color/text_secondary" />

            </LinearLayout>

            <!-- Team Profile -->
            <LinearLayout
                android:id="@+id/teamProfileItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_unicons_soccer_24"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Team Profile"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/variable_inter" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_unicons_arrow_right_24"
                    app:tint="@color/text_secondary" />

            </LinearLayout>


            <!-- Privacy Policy -->
            <LinearLayout
                android:id="@+id/privacyPolicyItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_unicons_shield_24"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Privacy Policy"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/variable_inter" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_unicons_arrow_right_24"
                    app:tint="@color/text_secondary" />

            </LinearLayout>

            <!-- Contact Developers -->
            <LinearLayout
                android:id="@+id/contactDevelopersItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_unicons_envelope_24"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Contact the Developers"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/variable_inter" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_unicons_arrow_right_24"
                    app:tint="@color/text_secondary" />

            </LinearLayout>

            <!-- Help & FAQ -->
            <LinearLayout
                android:id="@+id/helpFaqItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_unicons_question_24"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Help &amp; FAQ"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/variable_inter" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_unicons_arrow_right_24"
                    app:tint="@color/text_secondary" />

            </LinearLayout>

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:icon="@drawable/ic_unicons_logout_24"
                android:textColor="@color/error"
                android:iconTint="@color/error"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/error"
                app:strokeWidth="1dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout> 