<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Event Details Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/variable_inter"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="8dp" />

        <!-- Title -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:contentPadding="16dp"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Title"
                    android:textSize="12sp"
                    android:textColor="#4B4D4F"
                    android:textFontWeight="600"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eventTitleInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter event title"
                    android:inputType="text"
                    android:fontFamily="@font/variable_inter"
                    android:textColor="#161620"
                    android:textSize="16sp"
                    android:textColorHint="#999999"
                    android:background="@android:color/transparent" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Description -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:contentPadding="16dp"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="12sp"
                    android:textColor="#4B4D4F"
                    android:textFontWeight="600"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eventDescriptionInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter event description"
                    android:inputType="textMultiLine"
                    android:fontFamily="@font/variable_inter"
                    android:textColor="#161620"
                    android:textSize="16sp"
                    android:textColorHint="#999999"
                    android:background="@android:color/transparent"
                    android:minLines="2" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Schedule Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/variable_inter"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="8dp" />

        <!-- Date -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:contentPadding="16dp"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date *"
                    android:textSize="12sp"
                    android:textColor="#4B4D4F"
                    android:textFontWeight="600"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/ic_unicons_calendar_24"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="#4B4D4F"
                        android:layout_marginEnd="12dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eventDateInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Select date"
                        android:inputType="none"
                        android:fontFamily="@font/variable_inter"
                        android:textColor="#161620"
                        android:textSize="16sp"
                        android:textColorHint="#999999"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:clickable="true" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Start Time -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:contentPadding="16dp"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Time *"
                    android:textSize="12sp"
                    android:textColor="#4B4D4F"
                    android:textFontWeight="600"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/ic_unicons_clock_24"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="#4B4D4F"
                        android:layout_marginEnd="12dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eventStartTimeInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Select start time"
                        android:inputType="none"
                        android:fontFamily="@font/variable_inter"
                        android:textColor="#161620"
                        android:textSize="16sp"
                        android:textColorHint="#999999"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:clickable="true" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- End Time -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:contentPadding="16dp"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Time"
                    android:textSize="12sp"
                    android:textColor="#4B4D4F"
                    android:textFontWeight="600"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/ic_unicons_clock_24"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="#4B4D4F"
                        android:layout_marginEnd="12dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eventEndTimeInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Select end time"
                        android:inputType="none"
                        android:fontFamily="@font/variable_inter"
                        android:textColor="#161620"
                        android:textSize="16sp"
                        android:textColorHint="#999999"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:clickable="true" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Meeting Time -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:contentPadding="16dp"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meeting Time"
                    android:textSize="12sp"
                    android:textColor="#4B4D4F"
                    android:textFontWeight="600"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/ic_unicons_clock_24"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="#4B4D4F"
                        android:layout_marginEnd="12dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eventMeetingTimeInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Select meeting time"
                        android:inputType="none"
                        android:fontFamily="@font/variable_inter"
                        android:textColor="#161620"
                        android:textSize="16sp"
                        android:textColorHint="#999999"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:clickable="true" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Location -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:contentPadding="16dp"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="12sp"
                    android:textColor="#4B4D4F"
                    android:textFontWeight="600"
                    android:fontFamily="@font/variable_inter"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/ic_unicons_map_pin_24"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="#4B4D4F"
                        android:layout_marginEnd="12dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eventLocationInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter venue or location"
                        android:inputType="text"
                        android:fontFamily="@font/variable_inter"
                        android:textColor="#161620"
                        android:textSize="16sp"
                        android:textColorHint="#999999"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView> 