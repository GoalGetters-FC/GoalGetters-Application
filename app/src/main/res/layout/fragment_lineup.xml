<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/surface">

    <!-- Formation Selector and Search -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Formation Spinner -->
        <Spinner
            android:id="@+id/formationSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:background="@drawable/formation_spinner_background"
            android:padding="12dp"
            tools:listitem="@layout/item_formation_spinner" />

        <!-- Search Button -->
        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_unicons_search_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Search players"
            app:tint="@color/on_surface_variant" />

    </LinearLayout>

    <!-- Football Pitch -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/pitch_green">

        <com.ggetters.app.ui.central.views.components.FormationPitchView
            android:id="@+id/pitchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Available Players Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp">

        <!-- Section Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Squad (19/20)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:fontFamily="@font/variable_inter"
            android:layout_marginBottom="12dp" />

        <!-- Players Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:scrollbars="vertical"
            tools:itemCount="20"
            tools:listitem="@layout/item_lineup_player_grid" />

    </LinearLayout>

</LinearLayout>