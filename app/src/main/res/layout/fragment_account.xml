<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161620">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <!-- Header Section (matches teams tab) -->
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="32dp"
            android:paddingHorizontal="28dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/tv_user_name_header"
                android:text="User Account"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textFontWeight="600"
                android:fontFamily="@font/variable_inter"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

            <Space
                android:layout_height="8dp"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/tv_user_role_header"
                android:text="Account Settings"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textFontWeight="500"
                android:fontFamily="@font/variable_inter"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

        </LinearLayout>

        <!-- Content Section (matches teams tab) -->
        <com.google.android.material.card.MaterialCardView
            app:contentPadding="0dp"
            app:contentPaddingTop="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardPreventCornerOverlap="false"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.TopCorner40"
            app:strokeWidth="0dp"
            app:cardElevation="6dp"
            android:elevation="6dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

        <!-- Personal Information Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/variable_inter"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="8dp" />

        <!-- First Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/input_border"
            app:hintTextColor="@color/text_secondary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:fontFamily="@font/variable_inter"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:enabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Last Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/input_border"
            app:hintTextColor="@color/text_secondary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:fontFamily="@font/variable_inter"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:enabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/input_border"
            app:hintTextColor="@color/text_secondary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/variable_inter"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:enabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Alias -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/input_border"
            app:hintTextColor="@color/text_secondary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAlias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alias"
                android:inputType="text"
                android:fontFamily="@font/variable_inter"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:enabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Date of Birth -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/input_border"
            app:hintTextColor="@color/text_secondary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of Birth (YYYY-MM-DD)"
                android:inputType="date"
                android:fontFamily="@font/variable_inter"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:enabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Football Information Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Football Information"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/variable_inter"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="8dp" />

        <!-- Position -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/input_border"
            app:hintTextColor="@color/text_secondary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Position"
                android:inputType="text"
                android:fontFamily="@font/variable_inter"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:enabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Role Selection (Editable) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/input_border"
            app:hintTextColor="@color/text_secondary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Role"
                android:inputType="none"
                android:fontFamily="@font/variable_inter"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:enabled="false"
                android:clickable="false"
                android:focusable="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Status -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/input_border"
            app:hintTextColor="@color/text_secondary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Status"
                android:inputType="none"
                android:fontFamily="@font/variable_inter"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:enabled="false"
                android:clickable="false"
                android:focusable="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Team Information Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team Information"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/variable_inter"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="8dp" />

        <!-- Team Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Name"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/variable_inter"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvTeamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/variable_inter"
                android:background="@drawable/rounded_background"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Team Code -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Code"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/variable_inter"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvTeamCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/variable_inter"
                android:background="@drawable/rounded_background"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginBottom="24dp">

            <!-- Edit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginEnd="12dp"
                android:textColor="@color/white"
                app:backgroundTint="@color/primary"
                app:cornerRadius="8dp"
                style="@style/Widget.MaterialComponents.Button" />

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:visibility="gone"
                android:layout_marginEnd="12dp"
                android:textColor="@color/white"
                app:backgroundTint="@color/success"
                app:cornerRadius="8dp"
                style="@style/Widget.MaterialComponents.Button" />

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:visibility="gone"
                android:textColor="@color/text_secondary"
                app:strokeColor="@color/divider"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </LinearLayout>

        <!-- Delete Account Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:textColor="@color/error"
            android:icon="@drawable/ic_unicons_trash_24"
            android:iconTint="@color/error"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/error"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            android:layout_marginTop="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
