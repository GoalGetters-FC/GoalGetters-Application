<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:padding="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Switch Team"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/variable_inter" />

        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_unicons_close_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/text_secondary" />

    </LinearLayout>

    <!-- Subtitle -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keep in touch across the field"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/variable_inter" />

    <!-- Team Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Current Team Option -->
        <LinearLayout
            android:id="@+id/currentTeamOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <RadioButton
                android:id="@+id/currentTeamRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_unicons_soccer_24"
                android:background="@drawable/circle_background"
                android:layout_marginEnd="12dp"
                app:tint="@color/yellow" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="U15a Football"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/variable_inter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coach • 15 members"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/variable_inter" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(45)"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/notification_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:fontFamily="@font/variable_inter" />

        </LinearLayout>

        <!-- Other Team Option -->
        <LinearLayout
            android:id="@+id/otherTeamOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/otherTeamRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_unicons_soccer_24"
                android:background="@drawable/circle_background"
                android:layout_marginEnd="12dp"
                app:tint="@color/info" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seniors League"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/variable_inter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F-P • 10 members"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/variable_inter" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(2)"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/notification_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:fontFamily="@font/variable_inter" />

        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/switchTeamButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch to Selected Team"
            android:layout_marginBottom="8dp"
            style="@style/Widget.MaterialComponents.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/manageTeamsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Teams"
            android:icon="@drawable/ic_unicons_settings_24"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:strokeColor="@color/text_secondary"
            app:strokeWidth="1dp" />

    </LinearLayout>

</LinearLayout> 