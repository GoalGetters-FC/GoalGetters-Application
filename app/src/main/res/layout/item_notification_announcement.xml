<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Unread Indicator -->
        <View
            android:id="@+id/unreadIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/unread_indicator"
            android:visibility="visible" />

        <!-- Notification Icon -->
        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_unicons_megaphone_24"
            app:tint="@color/primary" />

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notificationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parents: remember to pick up your players from the front not the back. Thanks."
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/variable_inter" />

            <TextView
                android:id="@+id/notificationTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="12 Feb 2025"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="@font/variable_inter" />

        </LinearLayout>

        <!-- Options Menu -->
        <ImageButton
            android:id="@+id/optionsButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_unicons_ellipsis_v_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/text_secondary"
            android:contentDescription="Options" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
