<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- AppTheme style removed to resolve duplicate resource error. -->

    <style name="ShapeAppearance.TopEndRounded48Dp" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">48dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Widget.GoalGetters.Chip.Filled" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="chipBackgroundColor">@color/primary</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:fontFamily">@font/variable_inter</item>
        <item name="android:textSize">16sp</item>
        <item name="chipIconTint">@color/black</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.GoalGetters.Chip.Outlined" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:fontFamily">@font/variable_inter</item>
        <item name="android:textSize">16sp</item>
        <item name="chipIconTint">@color/primary</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.GoalGetters.Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:fontFamily">@font/variable_inter</item>
        <item name="android:textSize">16sp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.GoalGetters.Button.Outlined" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/variable_inter</item>
        <item name="android:textSize">16sp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.GoalGetters.Chip.Filter" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">20dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="chipBackgroundColor">@color/surface_variant</item>
        <item name="chipStrokeColor">@color/divider</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:fontFamily">@font/variable_inter</item>
        <item name="android:textSize">14sp</item>
        <item name="elevation">0dp</item>
        <item name="chipBackgroundColor">@color/surface_variant</item>
        <item name="rippleColor">@color/primary</item>
    </style>

    <!-- RSVP Button Styles -->
    <style name="Widget.GoalGetters.Button.RSVP.Available" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/success</item>
        <item name="android:fontFamily">@font/variable_inter</item>
        <item name="android:textSize">12sp</item>
        <item name="elevation">0dp</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="Widget.GoalGetters.Button.RSVP.Maybe" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/warning</item>
        <item name="android:fontFamily">@font/variable_inter</item>
        <item name="android:textSize">12sp</item>
        <item name="elevation">0dp</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="Widget.GoalGetters.Button.RSVP.Unavailable" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/error</item>
        <item name="android:fontFamily">@font/variable_inter</item>
        <item name="android:textSize">12sp</item>
        <item name="elevation">0dp</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <!-- Match Control Button Styles -->
    <style name="Widget.GoalGetters.Button.MatchControl.Primary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:fontFamily">@font/variable_inter</item>
        <item name="elevation">2dp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:minWidth">80dp</item>
    </style>

    <style name="Widget.GoalGetters.Button.MatchControl.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/surface_variant</item>
        <item name="strokeColor">@color/divider</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:fontFamily">@font/variable_inter</item>
        <item name="elevation">1dp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:minWidth">80dp</item>
    </style>

    <style name="Widget.GoalGetters.Button.MatchControl.Danger" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/error</item>
        <item name="android:fontFamily">@font/variable_inter</item>
        <item name="elevation">2dp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:minWidth">80dp</item>
    </style>

    <!-- General Button Styles -->
    <style name="Widget.GoalGetters.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:fontFamily">@font/variable_inter</item>
        <item name="elevation">2dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.GoalGetters.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/surface_variant</item>
        <item name="strokeColor">@color/divider</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:fontFamily">@font/variable_inter</item>
        <item name="elevation">1dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Tab Text Appearance -->
    <style name="TabTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/variable_inter</item>
    </style>

</resources> 